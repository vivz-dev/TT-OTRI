<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>TT_OTRI</RootNamespace>

    <!-- PUBLICAR PARA LINUX EN DOCKER -->
    <RuntimeIdentifiers>linux-x64</RuntimeIdentifiers>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="8.0.*" />
    <!-- 👇 Paquete correcto para .NET 8 en LINUX -->
    <PackageReference Include="Net.IBM.Data.Db2-lnx" Version="8.0.0.500" />
    <PackageReference Include="Scrutor" Version="6.1.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="8.1.2" />
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="8.13.1" />
  </ItemGroup>

  <!-- ❌ ELIMINADO: Copias manuales de IBM.Data.Db2.dll desde ~/.nuget de macOS -->
  <!-- ❌ ELIMINADO: Net.IBM.Data.Db2-osx -->

  <ItemGroup>
    <_ContentIncludedByDefault Remove="legacy\TT-OTRI.Api\appsettings.Development.json" />
    <_ContentIncludedByDefault Remove="legacy\TT-OTRI.Api\appsettings.json" />
    <_ContentIncludedByDefault Remove="legacy\TT-OTRI.Api\Properties\launchSettings.json" />
  </ItemGroup>

</Project>
